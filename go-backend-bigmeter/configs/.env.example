# Timezone used by scheduler and time calculations
TIMEZONE=Asia/Bangkok

# Connection strings (godror EZCONNECT)
# Example (Service Name): USER/PASS@host:1521/ORCLPDB1
# Example (SID): USER/PASS@host:1521/ORCL
ORACLE_DSN=USER/PASS@host:1521/ORCLPDB1
POSTGRES_DSN=postgres://postgres:postgres@postgres:5432/bigmeter?sslmode=disable

# Comma-separated list of 22 branch codes
BRANCHES=BA01,BA02,BA03

# Cron specs (seconds precision). Defaults match requirements.
CRON_YEARLY=0 0 22 15 10 *
CRON_MONTHLY=0 0 8 16 * *

# Mode: empty to run scheduler, or init-once / month-once
MODE=
# For init-once: DEBT_YM=YYYYMM (defaults to current year October)
DEBT_YM=
# For month-once: YM=YYYYMM (defaults to previous month)
YM=
